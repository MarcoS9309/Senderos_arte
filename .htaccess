# =============================================================================
# Configuración de Seguridad para Senderos de Tinta
# Archivo .htaccess para servidores Apache
# =============================================================================

# Activar RewriteEngine
RewriteEngine On

# =============================================================================
# Seguridad de Headers HTTP
# =============================================================================

# Content Security Policy (CSP) - Protección contra XSS
<IfModule mod_headers.c>
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' 'unsafe-eval'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self'; media-src 'self'; object-src 'none'; frame-src 'none'; base-uri 'self'; form-action 'self'"
    
    # Protección contra clickjacking
    Header always set X-Frame-Options "DENY"
    
    # Prevenir MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Activar protección XSS del navegador
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy para privacidad
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Permissions Policy (antes Feature Policy)
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), speaker=()"
    
    # Strict Transport Security (HTTPS only)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Cache control para recursos sensibles
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Headers específicos para aplicación terapéutica
    Header always set X-Therapeutic-App "Senderos-de-Tinta"
    Header always set X-Privacy-Level "Maximum"
    Header always set X-Data-Processing "Local-Only"
</IfModule>

# =============================================================================
# Redirección HTTPS Forzada
# =============================================================================
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =============================================================================
# Protección de Archivos Sensibles
# =============================================================================

# Bloquear acceso a archivos de configuración
<FilesMatch "^(\.htaccess|\.htpasswd|\.env|\.git|package\.json|package-lock\.json|\.gitignore)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquear acceso a directorios sensibles
RedirectMatch 404 ^/(\.git|node_modules|logs|user-backups|session-data)/.*$

# Proteger archivos de backup
<FilesMatch "\.(backup|bak|tmp|log|old)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# =============================================================================
# Páginas de Error Personalizadas
# =============================================================================
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html
ErrorDocument 403 /403.html

# =============================================================================
# Compresión de Archivos
# =============================================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# =============================================================================
# Control de Cache
# =============================================================================
<IfModule mod_expires.c>
    ExpiresActive On
    
    # CSS y JavaScript (1 año con versionado)
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    
    # Imágenes (6 meses)
    ExpiresByType image/png "access plus 6 months"
    ExpiresByType image/jpg "access plus 6 months"
    ExpiresByType image/jpeg "access plus 6 months"
    ExpiresByType image/gif "access plus 6 months"
    ExpiresByType image/svg+xml "access plus 6 months"
    
    # Fuentes (1 año)
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    
    # HTML y archivos dinámicos (sin cache)
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType application/json "access plus 0 seconds"
</IfModule>

# =============================================================================
# Protección contra Ataques
# =============================================================================

# Bloquear SQL injection patterns
RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} \.\./\.\./\.\./\.\./\.\./\.\./\.\./\.\./ [OR]
RewriteCond %{QUERY_STRING} ^.*\.(bash|git|hg|log|svn|swp|cvs) [OR]
RewriteCond %{QUERY_STRING} etc/passwd [OR]
RewriteCond %{QUERY_STRING} boot\.ini [OR]
RewriteCond %{QUERY_STRING} ftp\: [OR]
RewriteCond %{QUERY_STRING} http\: [OR]
RewriteCond %{QUERY_STRING} https\: [OR]
RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC]
RewriteRule .* - [F,L]

# Limitar tamaño de request
LimitRequestBody 10485760

# =============================================================================
# URLs Amigables y Redirecciones
# =============================================================================

# Redireccionar a chat terapéutico con URL corta
RewriteRule ^chat/?$ /CHAT_TERAPEUTICO_INTERACTIVO.html [L,R=301]
RewriteRule ^terapia/?$ /CHAT_TERAPEUTICO_INTERACTIVO.html [L,R=301]

# Redireccionar a cromoterapia
RewriteRule ^colores/?$ /paleta-colores.html [L,R=301]
RewriteRule ^cromoterapia/?$ /paleta-colores.html [L,R=301]

# Redireccionar a poemas
RewriteRule ^poemas/?$ /poems/ [L,R=301]
RewriteRule ^poetry/?$ /poems/ [L,R=301]

# =============================================================================
# Configuración MIME Types
# =============================================================================
<IfModule mod_mime.c>
    AddType application/manifest+json .webmanifest
    AddType text/cache-manifest .appcache
    AddType application/json .json
    AddType text/markdown .md
</IfModule>

# =============================================================================
# Configuración específica para Aplicación Terapéutica
# =============================================================================

# Asegurar que archivos MD se muestren como texto plano
<FilesMatch "\.md$">
    ForceType text/plain
    Header set Content-Type "text/plain; charset=utf-8"
</FilesMatch>

# Protección especial para datos de sesiones terapéuticas
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteCond %{REQUEST_FILENAME} \.(session|therapeutic|backup)$ [NC]
    RewriteRule .* - [F,L]
</IfModule>

# =============================================================================
# Logs de Seguridad (sin datos personales)
# =============================================================================
<IfModule mod_log_config.c>
    LogFormat "%h %l %u %t \"%r\" %>s %O \"%{Referer}i\" \"%{User-Agent}i\" %D" therapeutic
    # CustomLog logs/therapeutic_access.log therapeutic
</IfModule>